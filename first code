#1
// Given a side of cube, find perimetr(P).

#include <iostream>

using namespace std;
int main() {
   int side;
   cout << " write down side of a cube. ";
   cin >> side;
   cout << "P = " << side * 4 << endl;
}


#2
/* given sides of rectangle a, b. find area and perimetr,
and write solution step by step.*/

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a, b;
  cin >> a >> b;
  
  cout << "P = (" << a << "*" << b << ") * 2" << endl;
  cout << "P = " << ( a + b ) * 2 << endl;
  cout << " " << endl;
   
  cout << "A = "<< a << "*" << b << endl;
  cout << "A = " << a * b << endl;
}


#3
// Given an edge of cube, find volume andrea of a cube.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a;
  cin >> a;

  // volume of a cube
  cout << "V = " << a << "^" << 3 << endl;
  cout << "V = " << pow(a, 3);
  cout << " " << endl;
  
  // area of a cube
  cout << "A = (" << a << "^" << 2 << ") * 6" << endl;
  cout << "A = " << pow(a, 2) * 6;
}


#4
//Given radius of a circle, find perimetr and area of a circle.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int r;
  double pi = 3.14;
  cin >> r;
  
  //FIND CIRCUMFERENCE
  cout << "C = 2 * " << pi << " * " << r << endl;
  cout << "C = " << 2 * pi * r << endl;
  cout << " " << endl;
  
  // FIND AREA OF CIRCLE
  cout << "A = " << pi << " * " << r << "^2" << endl;
  cout << "A = " << pi * pow(r, 2);
}


#5
// find volume amd area of right parallelepiped (cuboid).

#include <iostream>
#include <cmath>

using namespace std;
int main() {
 int a, b ,c;
 cout << "Given length of edge of cuboid a, b, c." << endl;
 cin >> a >> b >> c;
 
 //find volume of cuboid (V)
 cout << "V = " << a << " * " << b << " * " << c << endl;
 cout << "V = " << a * b * c << endl;
 
 //find area od cuboid (A)
 cout << "A = 2 * (" << a <<  " * " <<  b << " + " << a << " * " << c << " + " << b << " * " << c << ")" << endl;
 cout << "A = " << 2 * (a * b + a * c + c * b) << endl;
}


#6
// Arithmetic mean of 2 numbers.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
 int a, b;
 cout << "find arithmetic mean of two numbers" << endl;
 cin >> a >> b;
 
 cout << "Mean = (" << a << " + " << b << ") / 2" << endl;
 cout << "Mean = " << (a + b) / 2;
}

#7
//find geometric mean of 2 numbers.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a, b;
  cout << "find geometric mean of two numbers" << endl;
  cin >> a >> b;
  
  cout << "Mean = sqrt(" << a << " * " << b << ")" << endl;
  cout << "Mean = " << sqrt(a * b) << endl;
}


#8
//given 2 numbers (which both of them are not equal to 0), find sum, subtraction, multiplication, division of squares og this numbers.

1st solution

#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int a, b;
   cin >> a >> b;
   
   if (a == 0) {
       cout << "error!!" << endl;
   } else if (b == 0) {
       cout << "error!!" << endl;
   } else {
       cout << a << " + " << b << " = " << a + b << endl;
       cout << a << " - " << b << " = " << a - b << endl;
       cout << a << " * " << b << " = " << a * b << endl;
       cout << a << " ^2 " << " / " <<  b << " ^2 ";
       cout << " = " << pow(a, 2) / pow(b, 2) << endl;
    }
}

2nd solution

#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int a, b;
   cout << " a and b don't equal to 0. " << endl;
   cin >> a >> b;
   
     cout << a << " + " << b << " = " << a + b << endl;
     cout << a << " - " << b << " = " << a - b << endl;
     cout << a << " * " << b << " = " << a * b << endl;
     cout << a << " ^2 " << " / " <<  b << " ^2 ";
     cout << " = " << pow(a, 2) / pow(b, 2) << endl;
}


#9
// Given 2 variables, find sum, subtraction, multiplication, and division of his modules.

#include <iostream>
#include <cmath>
 
using namespace std;
int main() {
   int a, b;
   cin >> a >> b;
   
     if (a == 0) {
         cout << "error!" << endl;
     } else if (b == 0) {
         cout << "error!" << endl;
     } else {
         cout << a << " + " << b << " = " << a + b << endl;
         cout << a << " - " << b << " = " << a - b << endl;
         cout << a << " * " << b << " = " << a * b << endl;
         cout << "sqrt(" <<  a << "^2)" << " / " << "sqrt(" << b << "^2)";
         cout << " = " << sqrt(pow(a, 2)) / sqrt(pow(b, 2));
     }

 return 0;
}


#10
//given 2 legs of right triangle, find hypotenuse and perimetr.

#include <iostream>
#include <cmath>
 
using namespace std;
int main() {
   int a, b;
   cin >> a >> b;
   int h;
   
     cout << "sqrt(" << a << "^2 + " << b << "^2)" << " = ";
     cout << sqrt(pow(a, 2) + pow(b, 2)) << endl;
      h = sqrt(pow(a, 2) + pow(b, 2));
     cout << "P = " << a << " + " << b << " + " << h << " = ";
     cout << a + b + h;
}


#11
/* Given 2 circles with general centre and radiuses r1, r2 (r2 > r1), find areas of this circles, and then area of third circle, 
   which one outter radius = r2, and inner radius = r1.  */
   
#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int r1, r2;
   cout << "insert two radiuses of two cirlces which have the same centre.";
   cout << " (r2 > r1)" << endl;
  
   cout << "1st radius: ";
   cin >> r1;
   cout << "2nd radius: ";
   cin >> r2;
   
   int A1, A2;   
   int pi = 3.14;
   
   // find area of interior circle 
   cout << "A1 = " << pi << " * " << r1 << "^2" << endl;
   cout << "A1 = " << pi * pow(r1, 2) << endl;
   A1 = pi * pow(r1, 2);
   
   // find area of exterior circle
   cout << "A2 = " << pi << " * " << r2 << "^2" << endl;
   cout << "A2 = " << pi * pow(r2, 2) << endl; 
   A2 = pi * pow(r2, 2);
   
   // find area of 3rd circle which outer radius = r2, inner radius = r1.
   cout << "A3 = " << A2 << " - " << A1 << endl;
   cout << "A3 = " << A2 - A1;
}   


#12
// given circumference , find radius and area of circle and take 3.14 as a value of a pi.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int C;
   cout << "Write down circumference of circle (C):  ";
   cin >> C;
   double pi = 3.14;
   double r, A;
   
   //find radius of circle.
   cout << "r = C / (2*pi)" << endl;
   cout << "r = " << C << " / (2*" << pi << ")" << endl;
   cout << "r = " << C/(2*pi) <<endl;
   r = C/(2*pi);
   cout << " " << endl;
   
   //find area of circle
   cout << "A = pi*r^2" << endl;
   cout << "A = " << pi << "*" << r << "^2" << endl;
   cout << "A = " << pi*pow(r, 2) << endl;
   A = pi*pow(r, 2);
}
