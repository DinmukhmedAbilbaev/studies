#1
// Given a side of cube, find perimetr(P).

#include <iostream>

using namespace std;
int main() {
   int side;
   cout << " write down side of a cube. ";
   cin >> side;
   cout << "P = " << side * 4 << endl;
}


#2
/* given sides of rectangle a, b. find area and perimetr,
and write solution step by step.*/

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a, b;
  cin >> a >> b;
  
  cout << "P = (" << a << "*" << b << ") * 2" << endl;
  cout << "P = " << ( a + b ) * 2 << endl;
  cout << " " << endl;
   
  cout << "A = "<< a << "*" << b << endl;
  cout << "A = " << a * b << endl;
}


#3
// Given an edge of cube, find volume andrea of a cube.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a;
  cin >> a;

  // volume of a cube
  cout << "V = " << a << "^" << 3 << endl;
  cout << "V = " << pow(a, 3);
  cout << " " << endl;
  
  // area of a cube
  cout << "A = (" << a << "^" << 2 << ") * 6" << endl;
  cout << "A = " << pow(a, 2) * 6;
}


#4
//Given radius of a circle, find perimetr and area of a circle.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int r;
  double pi = 3.14;
  cin >> r;
  
  //FIND CIRCUMFERENCE
  cout << "C = 2 * " << pi << " * " << r << endl;
  cout << "C = " << 2 * pi * r << endl;
  cout << " " << endl;
  
  // FIND AREA OF CIRCLE
  cout << "A = " << pi << " * " << r << "^2" << endl;
  cout << "A = " << pi * pow(r, 2);
}


#5
// find volume amd area of right parallelepiped (cuboid).

#include <iostream>
#include <cmath>

using namespace std;
int main() {
 int a, b ,c;
 cout << "Given length of edge of cuboid a, b, c." << endl;
 cin >> a >> b >> c;
 
 //find volume of cuboid (V)
 cout << "V = " << a << " * " << b << " * " << c << endl;
 cout << "V = " << a * b * c << endl;
 
 //find area od cuboid (A)
 cout << "A = 2 * (" << a <<  " * " <<  b << " + " << a << " * " << c << " + " << b << " * " << c << ")" << endl;
 cout << "A = " << 2 * (a * b + a * c + c * b) << endl;
}


#6
// Arithmetic mean of 2 numbers.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
 int a, b;
 cout << "find arithmetic mean of two numbers" << endl;
 cin >> a >> b;
 
 cout << "Mean = (" << a << " + " << b << ") / 2" << endl;
 cout << "Mean = " << (a + b) / 2;
}

#7
//find geometric mean of 2 numbers.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a, b;
  cout << "find geometric mean of two numbers" << endl;
  cin >> a >> b;
  
  cout << "Mean = sqrt(" << a << " * " << b << ")" << endl;
  cout << "Mean = " << sqrt(a * b) << endl;
}


#8
//given 2 numbers (which both of them are not equal to 0), find sum, subtraction, multiplication, division of squares og this numbers.

1st solution

#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int a, b;
   cin >> a >> b;
   
   if (a == 0) {
       cout << "error!!" << endl;
   } else if (b == 0) {
       cout << "error!!" << endl;
   } else {
       cout << a << " + " << b << " = " << a + b << endl;
       cout << a << " - " << b << " = " << a - b << endl;
       cout << a << " * " << b << " = " << a * b << endl;
       cout << a << " ^2 " << " / " <<  b << " ^2 ";
       cout << " = " << pow(a, 2) / pow(b, 2) << endl;
    }
}

2nd solution

#include <iostream>
#include <cmath>

using namespace std;
int main() {
   int a, b;
   cout << " a and b don't equal to 0. " << endl;
   cin >> a >> b;
   
     cout << a << " + " << b << " = " << a + b << endl;
     cout << a << " - " << b << " = " << a - b << endl;
     cout << a << " * " << b << " = " << a * b << endl;
     cout << a << " ^2 " << " / " <<  b << " ^2 ";
     cout << " = " << pow(a, 2) / pow(b, 2) << endl;
}
