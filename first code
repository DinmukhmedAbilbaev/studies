#1
// Given a side of cube, find perimetr(P).

#include <iostream>

using namespace std;
int main() {
   int side;
   cout << " write down side of a cube. ";
   cin >> side;
   cout << "P = " << side * 4 << endl;
}


#2
/* given sides of rectangle a, b. find area and perimetr,
and write solution step by step.*/

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a, b;
  cin >> a >> b;
  
  cout << "P = (" << a << "*" << b << ") * 2" << endl;
  cout << "P = " << ( a + b ) * 2 << endl;
  cout << " " << endl;
   
  cout << "A = "<< a << "*" << b << endl;
  cout << "A = " << a * b << endl;
}


#3
// Given an edge of cube, find volume andrea of a cube.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int a;
  cin >> a;

  // volume of a cube
  cout << "V = " << a << "^" << 3 << endl;
  cout << "V = " << pow(a, 3);
  cout << " " << endl;
  
  // area of a cube
  cout << "A = (" << a << "^" << 2 << ") * 6" << endl;
  cout << "A = " << pow(a, 2) * 6;
}


#4
//Given radius of a circle, find perimetr and area of a circle.

#include <iostream>
#include <cmath>

using namespace std;
int main() {
  int r;
  double pi = 3.14;
  cin >> r;
  
  //FIND CIRCUMFERENCE
  cout << "C = 2 * " << pi << " * " << r << endl;
  cout << "C = " << 2 * pi * r << endl;
  cout << " " << endl;
  
  // FIND AREA OF CIRCLE
  cout << "A = " << pi << " * " << r << "^2" << endl;
  cout << "A = " << pi * pow(r, 2);
}
